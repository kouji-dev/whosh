{
  "name": "@tikk/server",
  "version": "0.1.0",
  "description": "Backend server for Tikk social media management app",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development node scripts/setup-env.js && ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "cross-env NODE_ENV=production node scripts/setup-env.js && node dist/index.js",
    "start:dev": "cross-env NODE_ENV=development node scripts/setup-env.js && node dist/index.js",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "setup": "node scripts/setup-env.js",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:push": "drizzle-kit push",
    "drizzle:studio": "drizzle-kit studio",
    "drizzle:migrate": "ts-node-dev --respawn --transpile-only src/db/migrate.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "latest",
    "@paralleldrive/cuid2": "^2.2.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "drizzle-orm": "latest",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg-boss": "^10.2.0",
    "redis": "^4.6.13",
    "winston": "^3.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.20",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.2",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "drizzle-kit": "latest",
    "eslint": "^8.56.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
